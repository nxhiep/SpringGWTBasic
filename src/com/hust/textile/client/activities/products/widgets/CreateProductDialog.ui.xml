<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:v="urn:import:com.hust.textile.client.view"
	>
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<div class="row">
			<div class="col-xs-12 col-sm-6">
				<label>Tên sản phẩm</label>
				<b:TextBox ui:field="nameBox"></b:TextBox>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<label>Ảnh sản phẩm</label>
				<b:Button text="Tải ảnh"></b:Button>
				<g:FlowPanel ui:field="imagesPanel"></g:FlowPanel>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<label>Mô tả</label>
				<b:TextArea ui:field="descriptionBox"></b:TextArea>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<label>Ghi chú</label>
				<v:CKEditor ui:field="noteEditor"></v:CKEditor>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 